<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: LightGray;" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.settingsStageController">
   <left>
      <VBox styleClass="section-pane" stylesheets="@/Styles/settingsStageStyle.css" BorderPane.alignment="TOP_CENTER">
         <padding>
            <Insets left="30.0" right="50.0" top="20.0" />
         </padding>
         <Button onAction="#generalSettings" styleClass="section-btn" stylesheets="@/Styles/settingsStageStyle.css" text="%general" />
         <Button onAction="#visualSettings" styleClass="section-btn" stylesheets="@/Styles/settingsStageStyle.css" text="%visual" />
      </VBox>
   </left>
   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="30.0" right="30.0" top="30.0" />
         </padding>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <Button onAction="#resetData" styleClass="save_reset-btn" stylesheets="@/Styles/settingsStageStyle.css" text="%resetData">
            <HBox.margin>
               <Insets />
            </HBox.margin>
         </Button>
         <Button onAction="#resetSettings" styleClass="save_reset-btn" stylesheets="@/Styles/settingsStageStyle.css" text="%resetSettings">
            <HBox.margin>
               <Insets />
            </HBox.margin>
         </Button>
         <Button onAction="#save" styleClass="save_reset-btn" stylesheets="@/Styles/settingsStageStyle.css" text="%save">
            <HBox.margin>
               <Insets />
            </HBox.margin>
         </Button>
      </HBox>
   </bottom>
   <right>
      <Button onAction="#goBack" styleClass="back-btn" stylesheets="@/Styles/settingsStageStyle.css" text="" BorderPane.alignment="TOP_CENTER">
         <BorderPane.margin>
            <Insets right="30.0" top="20.0" />
         </BorderPane.margin>
      </Button>
   </right>
</BorderPane>
